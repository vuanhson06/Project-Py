# =============================
# 1. TOKENIZE FUNCTION
# =============================

def tokenize_text(message: str) -> List[str]:
    """
    This function takes one message (string)
    and returns a list of tokens (words) after:
      - converting to lowercase
      - keeping only letters and spaces
      - splitting by spaces
      - removing stopwords and empty tokens
    """
    # Bước 1: Chuyển toàn bộ tin nhắn về chữ thường
    sentence = message.lower()

    # Bước 2: Giữ lại các ký tự chữ cái và khoảng trắng (loại bỏ số, dấu câu, ký hiệu)
    sentence = keep_letters_and_spaces(sentence)

    # Bước 3: Cắt chuỗi thành các từ riêng biệt, dựa trên khoảng trắng
    words = sentence.split(" ")

    # Bước 4: Duyệt qua từng từ và loại bỏ:
    #   - Từ rỗng (chuỗi trống)
    #   - Stopwords (những từ vô nghĩa như “the”, “and”, “is”...)
    clean_tokens = []
    for w in words:
        if w.strip() != "" and w not in STOPWORDS:
            clean_tokens.append(w)

    # Bước 5: Trả về danh sách các token sạch
    return clean_tokens


# =============================
# 2. READ DATASET FROM CSV
# =============================

def load_dataset(csv_path: str) -> Tuple[List[str], List[str]]:
    """
    Read a CSV file containing two columns: 'label' and 'text'
    Returns:
      - labels: list of message labels (spam / ham)
      - messages: list of message contents
    """
    labels = []
    messages = []

    # Bước 1: Mở file CSV để đọc dữ liệu
    with open(csv_path, mode='r', encoding='utf-8') as file:
        reader = csv.DictReader(file)

        # Bước 2: Kiểm tra xem file có đủ 2 cột cần thiết không
        if "label" not in reader.fieldnames or "text" not in reader.fieldnames:
            raise ValueError("CSV must contain 'label' and 'text' columns")

        # Bước 3: Duyệt từng dòng trong file và tách dữ liệu ra 2 danh sách
        for row in reader:
            label = row["label"].strip()   # nhãn (spam/ham)
            msg = row["text"].strip()      # nội dung tin nhắn
            labels.append(label)
            messages.append(msg)

    # Bước 4: Trả về 2 danh sách song song
    return labels, messages


